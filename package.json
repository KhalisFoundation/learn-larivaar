{
  "name": "com.cyfersystems.learnlarivaar",
  "version": "1.0.11",
  "displayName": "Learn Larivaar",
  "description": "An application to help learn Larivaar through Sehaj Paatth.",
  "scripts": {
    "build": "run-s build:*",
    "build:scss": "node-sass --output-style nested --source-map true --include-path src/scss src/scss/index.scss www/css/index.css",
    "build:scripts": "webpack",
    "dev": "NODE_ENV=development webpack",
    "serve": "cordova run browser",
    "watch-css": "nodemon --watch src -e scss -x \"npm run build:scss\"",
    "watch": "nodemon --watch src -e js -x \"cordova build browser\""
  },
  "cordova": {
    "platforms": [
      "ios",
      "android",
      "browser"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-insomnia": {},
      "cordova-plugin-browsertab": {},
      "cordova-plugin-inappbrowser": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-device": {},
      "cordova-plugin-screen-orientation": {}
    }
  },
  "dependencies": {
    "cordova-android": "^7.1.4",
    "cordova-browser": "^5.0.4",
    "cordova-ios": "^4.5.5",
    "cordova-plugin-browsertab": "^0.2.0",
    "cordova-plugin-compat": "^1.2.0",
    "cordova-plugin-device": "^1.1.7",
    "cordova-plugin-inappbrowser": "^1.7.2",
    "cordova-plugin-screen-orientation": "^2.0.2",
    "cordova-plugin-splashscreen": "^4.1.0",
    "cordova-plugin-whitelist": "1",
    "es6-promise-plugin": "^4.2.2",
    "lodash.throttle": "^4.1.1",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.7.0",
    "react-redux": "^5.1.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.4.7",
    "babel-loader": "^8.0.5",
    "cordova": "^8.1.2",
    "cssnano": "^4.1.8",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "htmlhint": "^0.10.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.9.4",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.5",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0",
    "terser": "^3.14.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  }
}